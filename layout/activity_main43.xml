<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main43Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreboard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Analysis"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="#D8C410"
            android:textSize="35sp"
            />

        <Button
            android:layout_width="250dp"
            android:textSize="20sp"
            android:layout_height="50dp"
            android:id="@+id/ta"
            android:text="Team Analysis"
            android:background="@drawable/input_shape"
            android:layout_below="@+id/scoreboard"
            android:layout_marginTop="90dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:textSize="20sp"
            android:background="@drawable/input_shape"
            android:id="@+id/pa"
            android:text="Player Analysis"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/ta"
            android:layout_marginTop="25dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>