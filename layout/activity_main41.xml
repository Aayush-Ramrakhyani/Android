<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main41Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreboard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Analysis"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:textColor="#D8C410"
            android:textSize="35sp" />

        <Button
            android:layout_width="180dp"
            android:textSize="18sp"
            android:layout_height="50dp"
            android:id="@+id/cricket"
            android:text="Cricket"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:layout_below="@+id/scoreboard"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:textSize="18sp"
            android:id="@+id/football"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:text="FOOTBALL"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cricket"
            android:layout_marginTop="15dp" />

        <Button
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:id="@+id/baseketball"
            android:textSize="18sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:text="BASKET BALL"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/football"
            android:layout_marginTop="15dp" />


    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>