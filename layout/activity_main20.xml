<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main20Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-122dp"
        tools:layout_editor_absoluteY="37dp">

        <TextView
            android:id="@+id/batsman"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:text="Select PLayer"></TextView>

        <Button
            android:id="@+id/striker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/batsman"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="Select PLayer"></Button>

        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/striker"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="START"></Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>