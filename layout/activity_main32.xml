<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main32Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:layout_width="200dp"
            android:textSize="25dp"
            android:layout_height="80dp"
            android:id="@+id/quarter"
            android:text="QUARTER FINAL"
            android:background="@drawable/input_shape"
            android:layout_marginTop="150dp"
            android:layout_centerHorizontal="true"
            ></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:id="@+id/semi"
            android:text="SEMI FINAL"
            android:background="@drawable/input_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/quarter"
            android:layout_marginTop="15dp"
            ></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:id="@+id/finaL"
            android:text="FINAL"
            android:background="@drawable/input_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/semi"
            android:layout_marginTop="15dp"
            ></Button>
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:textSize="25dp"
            android:id="@+id/practice"
            android:text="PRACTICE MATCH"
            android:background="@drawable/input_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/finaL"
            android:layout_marginTop="15dp"
            ></Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>