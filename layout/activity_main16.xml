<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main16Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/versus_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.2"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WHO WON THE TOSS?"
            android:layout_centerHorizontal="true"
            android:textSize="30dp"
            android:layout_marginTop="60dp"
            android:textColor="#AEEEF3F2"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/text1"></TextView>
        <Button
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text1"
            android:text=""
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/t1"
            android:textSize="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/round_but"
            ></Button>
        <Button
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:layout_below="@+id/text1"
            android:text=""
            android:textColor="@color/white"
            android:fontFamily="sans-serif-medium"
            android:id="@+id/t2"
            android:layout_toRightOf="@+id/t1"
            android:textSize="20sp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="220dp"
            android:background="@drawable/round_but2"
            ></Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>