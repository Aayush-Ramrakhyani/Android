<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main24Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/foot_ball4">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/team1"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:textColor="#0A012C"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="90dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:textColor="#0A012C"
            android:layout_toRightOf="@+id/team1"
            android:id="@+id/team2"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="150dp"></TextView>
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/team1"
            android:text="0"
            android:enabled="false"
            android:fontFamily="monospace"
            android:textSize="40dp"
            android:textColor="#0A012C"
            android:background="@drawable/square_but"
            android:layout_marginLeft="50dp"
            android:id="@+id/score1"></Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_below="@+id/team2"
            android:text="0"
            android:enabled="false"
            android:textSize="40dp"
            android:fontFamily="monospace"
            android:textColor="#0A012C"
            android:background="@drawable/square_but"
            android:layout_marginLeft="90dp"
            android:layout_toRightOf="@+id/score1"
            android:id="@+id/score2"></Button>
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/time"
            android:hint="Enter Time"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:textColor="#0A012C"
            android:textColorHint="#0A012C"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/score1"
            android:layout_marginTop="55dp"></EditText>
        <Button
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:id="@+id/ok"
            android:textSize="17sp"
            android:textColor="#0A012C"
            android:fontFamily="monospace"
            android:layout_below="@+id/time"
            android:background="@drawable/oval_but"
            android:layout_centerHorizontal="true"
            android:text="OK"></Button>
        <Button
            android:layout_width="90dp"
            android:layout_height="40dp"
            android:id="@+id/timer"
            android:visibility="invisible"
            android:fontFamily="monospace"
            android:textSize="20dp"
            android:textColor="#0A012C"
            android:background="@drawable/square_but"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/score1"
            android:layout_marginTop="55dp"></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>