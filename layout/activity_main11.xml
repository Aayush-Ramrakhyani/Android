<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.3"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/form"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-condensed-medium"
            android:textColor="#FFEB3B"
            android:text="Player Form"
            android:textSize="40dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:text="First Name"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/fname1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="52dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/fname"
            android:hint="Enter First Name"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fname"
            android:text="Last Name"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/lname1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="60dp"
            android:layout_below="@+id/fname1"
            android:layout_toRightOf="@+id/lname"
            android:hint="Enter Last Name"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:layout_marginTop="20dp"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:text="Gender:"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_marginLeft="15dp"
            android:layout_below="@+id/lname"
            android:layout_marginTop="10dp"></TextView>
        <RadioGroup
            android:id="@+id/g"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/gender"
            android:layout_below="@+id/lname1"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/male"
                android:text="M"
                android:checked="true"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                ></RadioButton>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/female"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:text="F"
                android:textColor="@color/white"
                android:buttonTint="@color/white"
                ></RadioButton>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="9dp"
            android:text="Enter UserID"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/gender"
            ></TextView>
        <EditText
            android:id="@+id/id1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/id"
            android:hint="Enter ID eg:abc123"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:layout_below="@+id/gender"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sports"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Select Sport"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/id"
            ></TextView>
        <Spinner
            android:layout_width="160dp"
            android:layout_height="25dp"
            android:layout_below="@id/id1"
            android:layout_toRightOf="@+id/sports"
            android:layout_marginLeft="35dp"
            android:backgroundTint="#D1E6E8"
            android:id="@+id/sports1"
            android:background="@color/white"
            android:layout_marginTop="20dp"></Spinner>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_marginTop="316dp"
            android:layout_marginLeft="345dp"
            android:src="@drawable/down" />


        <TextView
            android:id="@+id/clg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sports"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="College"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"></TextView>

        <EditText
            android:id="@+id/clg1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_below="@+id/sports1"
            android:layout_marginLeft="87dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/clg"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:hint="Enter College"
            android:inputType="textPersonName"></EditText>

        <!--        Cricket -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/role"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="17dp"
            android:text="Role"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/clg"
            ></TextView>
        <EditText
            android:id="@+id/role1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/role"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:hint="Enter Role"
            android:layout_below="@+id/clg1"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bs"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="Batting Style"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/role"
            ></TextView>
        <EditText
            android:id="@+id/bs1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/bs"
            android:hint="Enter Batting Style"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:layout_below="@+id/role1"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bos"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="18dp"
            android:text="Bowling Style"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/bs"
            ></TextView>
        <EditText
            android:id="@+id/bos1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="13dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/bos"
            android:hint="Enter Bowling Style"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:layout_below="@+id/bs1"
            android:inputType="textPersonName"></EditText>
        <!--        For Football,volleyball,basketball-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/position"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:text="Position"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            android:layout_below="@+id/clg"
            ></TextView>
        <EditText
            android:id="@+id/position1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/position"
            android:hint="Enter Position"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:background="@drawable/text_shape"
            android:layout_below="@+id/clg1"
            android:inputType="textPersonName"
            android:gravity="center_horizontal"></EditText>
        <!--        Baseketball -->
        <Button
            android:id="@+id/but1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="630dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:textSize="18dp"
            android:textStyle="bold"
            android:background="@drawable/edit_but"
            android:text="Submit"></Button>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>