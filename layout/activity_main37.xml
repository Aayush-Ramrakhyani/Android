<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main37Activity"
    android:background="@drawable/versus_background5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/match"
            android:text=""
            android:textSize="30dp"
            android:textColor="#C0CA33"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="55dp"
            android:layout_centerHorizontal="true"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/team1"
            android:textColor="#C0CA33"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="250dp"
            android:textSize="33dp"
            android:layout_marginLeft="65dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/team2"
            android:textColor="#C0CA33"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="33dp"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="240dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="60dp"
            android:textColor="#7CB342"
            android:fontFamily="sans-serif-condensed-medium"
            android:id="@+id/score1"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="90dp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="60dp"
            android:id="@+id/score2"
            android:textColor="#7CB342"
            android:fontFamily="sans-serif-condensed-medium"
            android:layout_marginTop="330dp"
            android:layout_marginLeft="260dp"
            ></TextView>
        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:id="@+id/exit"
            android:textSize="20dp"
            android:background="@drawable/oval_but"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="585dp"></Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>