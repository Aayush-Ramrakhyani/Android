<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main29Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/versus_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="81dp">

        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/team1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="220dp"
            android:text=""
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/signup_but"
            ></Button>
        <Button
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:id="@+id/team2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="445dp"
            android:text=""
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/signup_but"
            ></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/start"
            android:text="START"
            android:layout_marginTop="50dp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/signup_but"
            android:layout_below="@+id/team2"
            android:layout_marginLeft="95dp"></Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20sp"
            android:id="@+id/cancel"
            android:text="CANCEL"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="17dp"
            android:background="@drawable/signup_but"
            android:layout_below="@+id/team2"
            android:layout_toRightOf="@+id/start"></Button>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>