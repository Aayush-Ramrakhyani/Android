<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.3"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="81dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/form"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:text="Signup Form"
            android:textColor="#FFEB3B"
            android:fontFamily="sans-serif-condensed-medium"
            android:textSize="40dp"

            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="150dp"
            android:text="First Name"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/fname1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_toRightOf="@+id/fname"
            android:hint="Enter First Name"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lname"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/fname"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:text="Last Name"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/lname1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/fname1"
            android:layout_toRightOf="@+id/lname"
            android:hint="Enter Last Name"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:layout_marginTop="20dp"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender"
            android:text="Gender:"
            android:textSize="27dp"
            android:layout_marginLeft="15dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:layout_below="@+id/lname"
            android:layout_marginTop="10dp"></TextView>
        <RadioGroup
            android:id="@+id/g"
            android:layout_height="match_parent"
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/gender"
            android:layout_below="@+id/lname1"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male"
            android:text="M"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:checked="true"
            android:buttonTint="@color/white"
            ></RadioButton>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/female"
            android:text="F"
            android:layout_marginLeft="30dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/white"
            android:buttonTint="@color/white"
            ></RadioButton>
        </RadioGroup>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/email"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/gender"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:text="Email"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/email1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="82dp"
            android:layout_below="@+id/gender"
            android:layout_toRightOf="@+id/email"
            android:layout_marginTop="10dp"
            android:hint="Enter Email address"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="textEmailAddress"

            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/phone"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/email"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:text="Phone no"
            android:textSize="27dp"
            ></TextView>
        <EditText
            android:id="@+id/phone1"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="80dp"
            android:layout_below="@+id/email1"
            android:layout_toRightOf="@+id/email"
            android:hint="Enter Phone number"
            android:layout_marginTop="20dp"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="phone"></EditText>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dob"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/phone"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:text="D.O.B"
            android:textSize="27dp"
            ></TextView>
        <DatePicker
            android:id="@+id/dob1"
            android:layout_width="250dp"
            android:layout_height="75dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            android:layout_marginLeft="75dp"
            android:layout_below="@+id/phone1"
            android:layout_toRightOf="@+id/email"
            android:hint="Enter D.O.B"
            android:layout_marginTop="18dp"
            android:fontFamily="sans-serif-medium"
            android:background="@drawable/text_shape"
            android:calendarTextColor="@color/white"
            ></DatePicker>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="46dp"
            android:text="Create ID"
            android:textSize="27dp"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:layout_below="@+id/dob"
            ></TextView>
        <EditText
            android:id="@+id/id1"
            android:layout_width="178dp"
            android:layout_height="30dp"
            android:layout_marginLeft="33dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/id"
            android:hint="Enter ID eg:abc123"
            android:layout_below="@+id/dob1"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="textPersonName"></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pass"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/id"
            android:fontFamily="sans-serif-smallcaps"
            android:textColor="#E8775A"
            android:text="Password"
            android:textSize="27dp"
            ></TextView>

        <EditText
            android:id="@+id/pass1"
            android:layout_width="178dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_below="@+id/id1"
            android:layout_toRightOf="@+id/pass"
            android:hint="Enter Password"
            android:layout_marginTop="26dp"
            android:textColor="#06043C"
            android:textColorHint="#06043C"
            android:textAlignment="center"
            android:background="@drawable/text_shape"
            android:inputType="textPassword"></EditText>

        <Button
            android:id="@+id/but1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="630dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:textSize="18dp"
            android:background="@drawable/input_shape"
            android:text="Submit"></Button>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>