<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main17Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/crick_background">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:alpha="0.2" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#3C3E3D"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:textSize="30sp"
            android:id="@+id/text1"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ELECTED TO?"
            android:textColor="#3C3E3D"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:textSize="30sp"
            android:id="@+id/text2"
            android:layout_toRightOf="@+id/text1"></TextView>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="90dp"
            android:id="@+id/bat"
            android:textSize="30dp"
            android:background="@drawable/batsman_bw"
            android:layout_marginLeft="70dp"
            ></Button>
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/text1"
            android:layout_marginTop="90dp"
            android:id="@+id/ball"
            android:layout_toRightOf="@+id/bat"
            android:textSize="30dp"
            android:background="@drawable/bowler_bw"
            android:layout_marginLeft="84dp"
            ></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>