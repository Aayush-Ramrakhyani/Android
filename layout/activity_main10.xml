<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main10Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/abstract_technology_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:alpha="0.3"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scoreboard"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:fontFamily="monospace"
            android:textColor="#FFEB3B"
            android:text="SCOREBOARD"
            android:textSize="35dp"
            ></TextView>
        <Button
            android:layout_width="150dp"
            android:textSize="18dp"
            android:layout_height="50dp"
            android:id="@+id/cricket"
            android:text="CRICKET"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:layout_below="@+id/scoreboard"
            android:layout_marginTop="80dp"
            android:layout_centerHorizontal="true"
            ></Button>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:textSize="18dp"
            android:id="@+id/football"
            android:text="FOOTBALL"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/cricket"
            android:layout_marginTop="15dp"
            ></Button>
        <Button
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/baseketball"
            android:textSize="18dp"
            android:text="BASKETBALL"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/input_shape"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/football"
            android:layout_marginTop="15dp"
            ></Button>

        <Button
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/playerform"
            android:textSize="18dp"
            android:text="PLAYER FORM"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:background="@drawable/edit_but"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/baseketball"
            android:layout_marginTop="60dp"
            ></Button>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>