<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main19Activity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!-- ScoreBoard-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/batting_team"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/batting_team"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="1dp"
            android:id="@+id/score"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="overs: "
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/score"
            android:layout_marginTop="1dp"
            android:id="@+id/o"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:id="@+id/overs"
            android:layout_below="@+id/score"
            android:layout_toRightOf="@+id/o"
            android:layout_marginTop="1dp"></TextView>
        <!--Batsman-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/overs"
            android:layout_marginTop="70dp"
            android:id="@+id/striker"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/strikerrun"
            android:layout_below="@id/striker"
            android:text=""></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/overs"
            android:layout_marginTop="70dp"
            android:layout_alignParentRight="true"
            android:id="@+id/non_striker"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/non_strikerrun"
            android:text=""
            android:layout_below="@+id/non_striker"
            android:layout_alignParentRight="true"></TextView>
        <!--Bowler-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_below="@+id/non_strikerrun"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:id="@+id/bowler"></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/bowler"
            android:layout_marginLeft="170dp"
            android:id="@+id/over"
            android:text=""></TextView>
        <!--Button-->
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="0"
            android:textSize="30dp"
            android:id="@+id/zero"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/over"
            ></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="1"
            android:textSize="30dp"
            android:id="@+id/one"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/over"
            android:layout_toRightOf="@+id/zero"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="2"
            android:textSize="30dp"
            android:id="@+id/two"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/over"
            android:layout_toRightOf="@+id/one"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="3"
            android:textSize="30dp"
            android:id="@+id/three"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/zero"
            ></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="4"
            android:textSize="30dp"
            android:id="@+id/four"
            android:layout_below="@+id/one"
            android:layout_toRightOf="@+id/three"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="6"
            android:textSize="30dp"
            android:id="@+id/six"
            android:layout_below="@+id/two"
            android:layout_toRightOf="@+id/four"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="OUT"
            android:textSize="20dp"
            android:id="@+id/out"
            android:layout_below="@+id/two"
            android:layout_toRightOf="@+id/six"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="WD"
            android:layout_marginLeft="10dp"
            android:textSize="30dp"
            android:id="@+id/wd"
            android:layout_below="@+id/three"
            ></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="NB"
            android:textSize="30dp"
            android:id="@+id/nb"
            android:layout_below="@+id/four"
            android:layout_toRightOf="@+id/wd"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="BYE"
            android:textSize="30dp"
            android:id="@+id/bye"
            android:layout_below="@+id/six"
            android:layout_toRightOf="@+id/nb"></Button>
        <Button
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:text="LB"
            android:textSize="30dp"
            android:id="@+id/lb"
            android:layout_below="@+id/out"
            android:layout_toRightOf="@+id/bye"></Button>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>